name: Documentation Validation

on:
  pull_request:
    paths:
      - 'data/**/*.yaml'
      - 'docs/**/*.md'
      - 'templates/**/*.jinja2'
      - 'schemas/**/*.json'
  push:
    branches:
      - main
      - develop
    paths:
      - 'data/**/*.yaml'
      - 'docs/**/*.md'

jobs:
  validate:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Set up Python
        uses: actions/setup-python@v5
        with:
          python-version: '3.11'

      - name: Install dependencies
        run: |
          pip install -r scripts/requirements.txt

      - name: Run CI validation
        run: |
          python scripts/automation/ci_validate.py
        # Note: Remove --strict flag to allow placeholders during development
        # Add --strict flag for production releases

      - name: Upload validation results
        if: failure()
        uses: actions/upload-artifact@v4
        with:
          name: validation-results
          path: |
            scripts/automation/*.log

  regenerate-docs:
    runs-on: ubuntu-latest
    needs: validate
    if: github.event_name == 'push' && github.ref == 'refs/heads/main'
    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Set up Python
        uses: actions/setup-python@v5
        with:
          python-version: '3.11'

      - name: Install dependencies
        run: |
          pip install -r scripts/requirements.txt

      - name: Regenerate documentation
        run: |
          python scripts/automation/batch_regenerate.py --live

      - name: Commit regenerated docs
        if: success()
        run: |
          git config user.name "Documentation Bot"
          git config user.email "bot@revenge-project.com"
          git add docs/
          git diff --quiet && git diff --staged --quiet || git commit -m "docs: regenerate from YAML [skip ci]"
          git push
