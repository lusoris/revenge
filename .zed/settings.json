{
  // ==========================================================================
  // Revenge Project - Zed Settings (Optimized for Go + SvelteKit + Coder)
  // ==========================================================================

  // -- Editor defaults (frontend-aligned: 2-space indent) --------------------
  "tab_size": 2,
  "hard_tabs": false,
  "format_on_save": "on",
  "ensure_final_newline_on_save": true,
  "remove_trailing_whitespace_on_save": true,
  "preferred_line_length": 100,

  // -- Inlay hints (gopls types, parameter names) ----------------------------
  "inlay_hints": {
    "enabled": true,
    "show_type_hints": true,
    "show_parameter_hints": true,
    "show_other_hints": true,
    "show_background": false,
    "edit_debounce_ms": 700,
    "scroll_debounce_ms": 50
  },

  // -- Inline diagnostics (built-in Error Lens) ------------------------------
  "diagnostics": {
    "include_warnings": true,
    "inline": {
      "enabled": true,
      "update_debounce_ms": 150,
      "padding": 4,
      "min_column": 80,
      "max_severity": null
    }
  },

  // -- Auto-install required Zed extensions ----------------------------------
  "auto_install_extensions": {
    "html": true,
    "svelte": true,
    "toml": true,
    "docker": true,
    "make": true,
    "sql": true,
    "terraform": true,
    "helm": true
  },

  // -- Per-language settings -------------------------------------------------
  "languages": {
    "Go": {
      "tab_size": 4,
      "hard_tabs": true,
      "formatter": "language_server",
      "format_on_save": "on",
      "preferred_line_length": 120,
      "code_actions_on_format": {
        "source.organizeImports": true
      }
    },
    "Python": {
      "tab_size": 4,
      "preferred_line_length": 88,
      "formatter": {
        "external": {
          "command": "ruff",
          "arguments": ["format", "-"]
        }
      },
      "format_on_save": "on",
      "code_actions_on_format": {
        "source.organizeImports.ruff": true
      }
    },
    "TypeScript": {
      "tab_size": 2,
      "formatter": {
        "external": {
          "command": "prettier",
          "arguments": ["--stdin-filepath", "{buffer_path}"]
        }
      }
    },
    "JavaScript": {
      "tab_size": 2,
      "formatter": {
        "external": {
          "command": "prettier",
          "arguments": ["--stdin-filepath", "{buffer_path}"]
        }
      }
    },
    "Svelte": {
      "tab_size": 2,
      "formatter": {
        "external": {
          "command": "prettier",
          "arguments": [
            "--stdin-filepath", "{buffer_path}",
            "--plugin", "prettier-plugin-svelte"
          ]
        }
      }
    },
    "CSS": {
      "tab_size": 2,
      "language_servers": ["tailwindcss-language-server", "..."]
    },
    "HTML": {
      "tab_size": 2,
      "formatter": {
        "external": {
          "command": "prettier",
          "arguments": ["--stdin-filepath", "{buffer_path}"]
        }
      }
    },
    "Markdown": {
      "tab_size": 2,
      "soft_wrap": "editor_width",
      "preferred_line_length": 120,
      "remove_trailing_whitespace_on_save": false
    },
    "YAML": {
      "tab_size": 2
    },
    "JSON": {
      "tab_size": 2
    },
    "JSONC": {
      "tab_size": 2
    },
    "TOML": {
      "tab_size": 2
    },
    "SQL": {
      "tab_size": 2
    },
    "Dockerfile": {
      "tab_size": 2
    },
    "Terraform": {
      "tab_size": 2,
      "formatter": "language_server"
    },
    "Shell Script": {
      "tab_size": 2
    }
  },

  // -- LSP configuration -----------------------------------------------------
  "lsp": {
    "gopls": {
      "initialization_options": {
        "hints": {
          "assignVariableTypes": true,
          "compositeLiteralFields": true,
          "compositeLiteralTypes": false,
          "constantValues": true,
          "functionTypeParameters": true,
          "parameterNames": true,
          "rangeVariableTypes": true
        },
        "analyses": {
          "unusedparams": true,
          "unusedwrite": true,
          "shadow": true,
          "nilness": true,
          "useany": true
        },
        "staticcheck": true,
        "gofumpt": false,
        "completeUnimported": true,
        "usePlaceholders": true,
        "semanticTokens": true,
        "symbolMatcher": "fuzzy",
        "diagnosticsDelay": "200ms"
      }
    },
    "tailwindcss-language-server": {
      "settings": {
        "tailwindCSS": {
          "emmetCompletions": true,
          "classAttributes": ["class", "className"],
          "experimental": {
            "classRegex": ["class\\s*[:=]\\s*[\"']([^\"']*)[\"']"]
          }
        }
      }
    },
    "ruff": {
      "initialization_options": {
        "settings": {
          "configurationPreference": "filesystemFirst"
        }
      }
    }
  },

  // -- File type overrides ---------------------------------------------------
  "file_types": {
    "JSONC": ["**/.zed/*.json", "**/.vscode/**/*.json", "tsconfig*.json"],
    "Shell Script": [".env.*"]
  },

  // -- File scanning (excludes generated/vendor/build artifacts) -------------
  "file_scan_exclusions": [
    "**/.git",
    "**/.svn",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/node_modules",
    "**/dist",
    "**/__pycache__",
    "**/.archive",
    "**/bin",
    "**/tmp",
    "**/.venv",
    "**/venv",
    "**/coverage.out",
    "**/coverage.html",
    "**/*.egg-info"
  ],

  // -- Git integration -------------------------------------------------------
  "git": {
    "git_gutter": "tracked_files",
    "inline_blame": {
      "enabled": true,
      "delay_ms": 600,
      "show_commit_summary": false,
      "min_column": 0
    }
  },

  // -- Terminal (Coder-aware: sets GOEXPERIMENT, detects Python venv) --------
  "terminal": {
    "working_directory": "current_project_directory",
    "env": {
      "GOEXPERIMENT": "greenteagc,jsonv2"
    },
    "detect_venv": {
      "on": {
        "directories": [".venv", "venv"],
        "activate_script": "default"
      }
    },
    "toolbar": {
      "breadcrumbs": true
    }
  },

  // -- UI tweaks -------------------------------------------------------------
  "indent_guides": {
    "enabled": true,
    "coloring": "indent_aware"
  },
  "scrollbar": {
    "diagnostics": "all"
  },
  "tabs": {
    "show_diagnostics": "errors"
  },
  "project_panel": {
    "show_diagnostics": "all"
  },
  "gutter": {
    "folds": true,
    "line_numbers": true
  }
}
